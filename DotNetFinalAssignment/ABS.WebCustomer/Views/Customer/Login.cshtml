@model ABS.WebCustomer.Models.LoginVM

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row" style="width:650px;align-items:center;margin-left:200px;margin-top:75px">
    <div class="shadow">
        <div class="portlet box green">
            <div class="portlet-title1">
                <div class="caption1">
                    Appointment Booking
                </div>
            </div>

            <div class="portlet-body form">
                @using (Html.BeginForm("LoginUser", "Customer", FormMethod.Post, new { id = "form", @class = "form-horizontal p20" }))
                {

                    @Html.AntiForgeryToken()
                    <div class="col-md-12">
                        <div class="errorHandler alert alert-danger display-hide">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="form-line">
                            <label class="col-sm-7 control-label">
                                <font size="6" color="sky blue"> <b> Log In  </b></font><br /><br />
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            <label class="col-sm-3 control-label">
                                Email ID
                                <span class="symbol required"></span>
                            </label>
                            <div class="col-md-6">
                                @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control", @style = "width:350px" })
                                @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-line">
                            <label class="col-sm-3 control-label">
                                Password
                                <span class="symbol required"></span>
                            </label>
                            <div class="col-md-6">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @style = "width:350px" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-sm-4"></div>
                        <div class="col-md-4">
                            <input type="submit" id="btnLogin" class="btn btn-success" value="Login" style="width:150px;height:40px" />
                        </div>
                        <div class="form-group"></div>
                    </div>
                }
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            var msg = '@TempData["invalidLogin"]';
            if (msg != '') {
                toastr.error(msg);
            }
        });

    </script>
}